<h1>Create a new Portfolio Item</h1>

<%= form_for(@portfolio_item) do |item| %>
  <div class="field">
    <%= item.label :title %>
    <%= item.text_field :title %>
  </div>

  <div class="field">
    <%= item.label :subtitle %>
    <%= item.text_field :subtitle %>
  </div>

  <div class="field">
    <%= item.label :body %>
    <%= item.text_area :body %>
  </div>

  <ul class="field">
    <%= item.fields_for :technologies do |technology_item| %>
      <li>
        <%= technology_item.label :name %>
        <%= technology_item.text_field :name %>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= item.submit %>
  </div>
<% end %>

